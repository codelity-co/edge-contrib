{
    "name": "flogo-mqtt",
    "type": "flogo:trigger",
    "version": "0.0.1",
    "title": "Receive MQTT Message",
    "description": "Simple MQTT Trigger",
    "homepage": "https://github.com/project-flogo/edge-contrib/tree/master/trigger/mqtt",
    "settings":[
      {
        "name": "broker",
        "type": "string",
        "required": true,
        "description": "The broker url"
      },
      {
        "name": "id",
        "type": "string",
        "required": true,
        "description": "The id of client"
      },
      {
        "name": "user",
        "type": "string",
        "description": "The username of the user"
      },
      {
        "name": "password",
        "type": "string",
        "description": "The password of the user"
      },
      {
        "name": "store",
        "type": "string",
        "description": "The link to the certificates"
      },
      {
        "name": "cleansess",
        "type": "boolean",
        "description": "Clean sesssion"
      },
      {
        "name": "enableTLS",
        "type": "boolean",
        "description": "Enable TLS"
      },
      {
        "name": "autoreconnect",
        "type": "boolean",
        "description": "Enable Autoreconnect"
      },
      {
        "name": "keepalive",
        "type": "int",
        "description": "Keep Alive"
      }
    ],
    "output": [
      {
        "name": "message",
        "type": "string",
        "description": "The message recieved"
      }
    ],
    "reply": [
      {
        "name": "data",
        "type": "object",
        "description": "The data to send"
      }
    ],
    "handler": {
      "settings": [
        {
          "name": "topic",
          "type": "string",
          "description": "The topic to subscribe to"
        },
        {
          "name": "qos",
          "type": "double",
          "description": "The Quality of Service"
        }
      ]
    }
  }
  